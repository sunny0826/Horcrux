{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "horcrux",
  "version": "0.1.0",
  "identifier": "com.horcrux.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:7627",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Horcrux",
        "width": 1600,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "sidecar"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "horcrux-backend"
    ]
  }
}
