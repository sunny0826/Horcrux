{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "sidecar",
  "description": "Sidecar permissions",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "horcrux-backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "horcrux-backend",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
